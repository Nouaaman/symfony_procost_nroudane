{% extends 'layout.html.twig' %}

{% block title %}
Métiers |
{{parent()}}
{% endblock %}

{% block content %}
<main class="app-content">
    <div class="app-title">
        <div>
            <h1><i class="fa fa-users"></i>&nbsp;Métiers</h1>
        </div>
        <ul class="app-breadcrumb breadcrumb">
            <li class="breadcrumb-item">
                <a href="#"><i class="fa fa-home fa-lg"></i></a>
            </li>
            <li class="breadcrumb-item">Métiers</li>
        </ul>
    </div>
    <div class="tile pb-5">
        <a href="form.html" class="btn btn-primary float-right mb-4"><i class="fa fa-plus-circle mr-2"></i>Ajouter un
            métier</a>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Métier</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for job in jobs%}
                    <tr>
                        <td>{{job.id}}</td>
                        <td>{{job.name}}</td>
                        <td style="text-align: right;">
                            <a href="detail.html" class="btn btn-primary btn-sm">
                                <i class="fa fa-eye mr-0"></i>
                            </a>
                            <a href="form.html" class="btn btn-info btn-sm">
                                <i class="fa fa-pencil mr-0"></i>
                            </a>
                        </td>
                    </tr>
                    {% endfor %}

                </tbody>
            </table>
        </div>
        <hr />
        <nav class="float-right">
            {{ knp_pagination_render(jobs) }}
        </nav>
    </div>
</main>

{% endblock %}