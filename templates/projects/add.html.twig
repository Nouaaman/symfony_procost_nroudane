                </div>
            </section>
            <hr />
            <section>
                <div class="row mt-4">
                    <div class="offset-md-4 col-md-8">
                       
                        <div class="form-group row">
                            <label class="control-label col-md-3">Prix de vente</label>
                            <div class="col-md-9">
                                {{ form_widget(form.sellingPrice, {'attr': {'class': 'form-control'} }) }}
                            </div>
